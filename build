#!/usr/bin/env bash
set -eu -o pipefail
dr=${DOCKER_REGISTRY:-boss:6000}
img=${DOCKER_IMAGE:-$(basename "$(cd "$(dirname "$0")" && pwd)")}
DOCKER_BUILDKIT=1 docker build --progress plain $([[ -n $SSH_AUTH_SOCK ]] && echo "--ssh default=$SSH_AUTH_SOCK") -t "$dr/$img" "$@" -- "$(dirname "$0")"
docker push "$dr/$img"
k8script.py --launcher -i "$dr/$img" sh -c 'echo /usr/bin/simsplice; echo /usr/bin/genvcf'
